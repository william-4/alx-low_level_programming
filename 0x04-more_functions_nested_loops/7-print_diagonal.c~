#include <stdio.h>

/**
 *print_diagonal - draws a diagonal line on the terminal
 *@n: the number of times the character \ should be printed
 *Return: void
 */
void main(int n)
{
	int i, j;

	n = 0;

	if (n > 0)
	{
		for (i = 0; i <= n; i++)
		{
			for (j = 0; j <= i; j++)
			{
				putchar(' ');
			}
			putchar('\\');
			putchar('\n');
		}
	}
	else
		putchar('\n');
}
